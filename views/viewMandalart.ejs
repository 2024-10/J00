                            <li><%= checklist.checklist_detail %></li>
                        <% }); %>
                    </ul>
                <% } %>
            <% }); %>
            <div id="checklist-container">
                <ul id="checklist-list"></ul>
            </div>
        </div>
        <div id="mandalart-grid" class="mandalart grid-<%= mandalart.tedolist_count %>"></div>
